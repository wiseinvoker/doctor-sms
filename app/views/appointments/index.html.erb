<!-- app/views/appointments/index.html.erb -->
<div class="container">
  <h1>Book an Appointment</h1>
  <h3>Available Slots</h3>
      <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Doctor</th>
                <th>Book</th>
            </tr>
            </thead>
            <tbody>
            <% @availabilities.each do |availability| %>
                <tr>
                <td><%= availability.day_of_week.strftime('%Y-%m-%d') %></td>
                <td><%= availability.start_time.strftime('%H:%M') %> - <%= availability.end_time.strftime('%H:%M') %></td>
                <td><%= availability.doctor.full_name %></td>
                <td><%= link_to "Book Appointment", book_appointment_patient_path(id: availability.doctor.id, availability_id: availability.id), class: "btn btn-primary" %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>
